<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios para poder descargar el pedido -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Threadly"
        tools:targetApi="31">

        <!-- TODO IMPORTANTE: Declarar todas las activities utilizadas -->

        <!-- Splash: será la que dará inicio a la ejecución -->
        <activity
            android:name="splash.Splash"
            android:exported="true"
            android:theme="@style/Base.Theme.Threadly">
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name="login.LoginUserExiste"
            android:exported="true" />
        <activity
            android:name="login.LoginUserNoExiste"
            android:exported="true" />

        <!-- Pantalla Inicio -->
        <activity
            android:name="PantallaInicio.PantallaPrincipal"
            android:exported="true" />

        <activity
            android:name="PantallaInicio.DatosPersonales"
            android:exported="true" />

        <activity
            android:name="PantallaInicio.ModificarDatos"
            android:exported="true" />

        <!-- Catálogo -->
        <activity
            android:name="CatalogoHilos.CatalogoHilos"
            android:exported="true" />

        <!-- Stock Personal -->
        <activity
            android:name="stock_personal.StockPersonal"
            android:exported="true" />

        <!-- Pedido -->
        <activity
            android:name="pedido_hilos.PedidoHilos"
            android:exported="true" />

        <!-- Gráfico Pedidos -->
        <activity
            android:name="grafico_pedido.GraficoPedido"
            android:exported="true" />

        <!-- Almacén Pedidos -->
        <activity
            android:name="almacen_pedidos.AlmacenPedidos"
            android:exported="true" />
    </application>

</manifest>