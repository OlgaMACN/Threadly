<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_horizontal_login_no_existe">

    <TextView
        android:id="@+id/txtVw_bienvenidaNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/bienvenidaNewUser"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <EditText
        android:id="@+id/edTxt_ingresarNombreNewUser"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/reutilizable_campo_texto_redondeado"
        android:fontFamily="@font/catchy_mager"
        android:gravity="center"
        android:hint="@string/ingresarNombreUser"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtVw_bienvenidaNewUser"
        app:layout_constraintVertical_bias="0.099" />

    <EditText
        android:id="@+id/edTxt_ingresarConstrasenaNewUser"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/reutilizable_campo_texto_redondeado"
        android:fontFamily="@font/catchy_mager"
        android:gravity="center"
        android:hint="@string/ingresarConstrasenaUser"
        android:inputType="textPassword"
        android:paddingEnd="50dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edTxt_ingresarNombreNewUser"
        app:layout_constraintVertical_bias="0.114" />

    <Button
        android:id="@+id/btn_ingresarThreadly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fondoBoton"
        android:gravity="center"
        android:text="@string/ingresarThreadly"
        android:textAlignment="center"
        android:textColor="@color/textoCabecera_y_Botones"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edTxt_ingresarConstrasenaNewUser"
        app:layout_constraintVertical_bias="0.226" />

    <TextView
        android:id="@+id/txtVw_agradecerRegistro"
        android:layout_width="285dp"
        android:layout_height="46dp"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/agradecerRegistro"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_ingresarThreadly"
        app:layout_constraintVertical_bias="0.627" />

    <ImageView
        android:id="@+id/imgVw_eye_closed"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/edTxt_ingresarConstrasenaNewUser"
        app:layout_constraintEnd_toEndOf="@id/edTxt_ingresarConstrasenaNewUser"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="@id/edTxt_ingresarConstrasenaNewUser"
        app:layout_constraintTop_toTopOf="@id/edTxt_ingresarConstrasenaNewUser"
        app:srcCompat="@drawable/img_eye_closed"
        app:tint="@color/Cabeceras_y_Toolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>