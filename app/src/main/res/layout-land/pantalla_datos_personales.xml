<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoPantallas">

    <TextView
        android:id="@+id/txtVw_datosPersonalesEncabezado"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/reutilizable_cabecera"
        android:fontFamily="@font/catchy_mager"
        android:gravity="center"
        android:text="@string/principal_threadly"
        android:textAlignment="center"
        android:textColor="@color/textoCabecera_y_Botones"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtVw_datosPersonales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/datosPersonales"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:id="@+id/txtVw_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/nombreUsuario"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="148dp" />

    <TextView
        android:id="@+id/txtVw_fotoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/fotoPerfil"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="148dp" />

    <ImageView
        android:id="@+id/imgVw_fotoPerfil"
        android:layout_width="99dp"
        android:layout_height="94dp"
        app:srcCompat="@drawable/avatar_ejemplo"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="192dp" />

    <TextView
        android:id="@+id/txtVw_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/catchy_mager"
        android:text="TextView"
        android:textColor="@color/morado_palo"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="192dp" />

    <Button
        android:id="@+id/btn_Volver"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/morado_palo"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/botonVolver"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="504dp"
        tools:layout_editor_absoluteY="259dp" />

    <Button
        android:id="@+id/btn_ModificarDatos"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/morado_palo"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/botonModificar"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="504dp"
        tools:layout_editor_absoluteY="106dp" />

    <Button
        android:id="@+id/btn_EliminarCuenta"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/morado_palo"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/botonEliminar"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="504dp"
        tools:layout_editor_absoluteY="208dp" />

    <Button
        android:id="@+id/btn_CerrarSesion"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/morado_palo"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/botonCerrarSesion"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="504dp"
        tools:layout_editor_absoluteY="157dp" />

    <include
        android:id="@+id/reutil_toolbar"
        layout="@layout/toolbar_layout"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>