<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoPantallas">


    <TextView
        android:id="@+id/txtVw_principal_threadly"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="344dp"
        android:background="@drawable/reutilizable_cabecera"
        android:fontFamily="@font/catchy_mager"
        android:gravity="center"
        android:text="@string/principal_threadly"
        android:textAlignment="center"
        android:textColor="@color/textoCabecera_y_Botones"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtVw_modificarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="252dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/catchy_mager"
        android:gravity="start"
        android:text="@string/modificarDatos"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/txtVw_cambiarNombre"
        app:layout_constraintEnd_toStartOf="@+id/txtVw_escogerImagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVw_principal_threadly" />


    <TextView
        android:id="@+id/txtVw_escogerImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="252dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/catchy_mager"
        android:gravity="start"
        android:text="@string/escogerImagen"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.784"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVw_principal_threadly" />

    <ImageView
        android:id="@+id/imgVw_avatar1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="35dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar2" />

    <ImageView
        android:id="@+id/imgVw_avatar2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="440dp"
        android:layout_marginBottom="100dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgVw_avatar4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/txtVw_contenidoCambioNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/avatar4" />

    <ImageView
        android:id="@+id/imgVw_avatar3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="101dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgVw_avatar4"
        app:srcCompat="@drawable/usuario_avatar" />

    <ImageView
        android:id="@+id/imgVw_avatar4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="100dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgVw_avatar3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgVw_avatar2"
        app:srcCompat="@drawable/hombre_avatar" />

    <ImageView
        android:id="@+id/imgVw_avatar5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="428dp"
        android:layout_marginTop="152dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtVw_contenidoCambioNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar3" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="152dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toStartOf="@+id/imgVw_avatar1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgVw_avatar5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar_ejemplo" />

    <TextView
        android:id="@+id/txtVw_cambiarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/catchy_mager"
        android:gravity="start"
        android:text="@string/cambiarNombre"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtVw_contenidoCambioNombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtVw_contenidoCambioNombre"
        android:layout_width="273dp"
        android:layout_height="43dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/reutilizable_campo_texto_redondeado"
        android:gravity="center"
        android:hint="@string/nuevoNombre"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_GuardarCambios"
        android:layout_width="174dp"
        android:layout_height="48dp"
        android:layout_marginStart="123dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/morado_palo"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/botonGuardarCambios"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_VolverDatos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_VolverDatos"
        android:layout_width="174dp"
        android:layout_height="48dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/morado_palo"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/botonVolver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_GuardarCambios" />


</androidx.constraintlayout.widget.ConstraintLayout>