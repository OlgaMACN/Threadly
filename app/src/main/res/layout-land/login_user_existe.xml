<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_horizontal_login_existe">

    <!-- LOGO a la izquierda -->
    <ImageView
        android:id="@+id/img_logoThreadly"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical"
        app:layout_constraintDimensionRatio="H,16:9"
        app:srcCompat="@drawable/img_logo_threadly_tranparente"
        android:scaleType="fitCenter" />

    <!-- Guideline para separar logo de contenido -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <!-- Bienvenida -->
    <TextView
        android:id="@+id/txtVw_bienvenidaUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/bienvenidaUser"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="32dp"/>

    <!-- Campo Nombre -->
    <EditText
        android:id="@+id/edTxt_ingresarNombreUser"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/reutilizable_campo_texto_redondeado"
        android:fontFamily="@font/catchy_mager"
        android:gravity="center"
        android:hint="@string/ingresarNombreUser"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/txtVw_bienvenidaUser"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo Contraseña -->
    <EditText
        android:id="@+id/edTxt_ingresarConstrasenaUser"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/reutilizable_campo_texto_redondeado"
        android:fontFamily="@font/catchy_mager"
        android:gravity="center"
        android:hint="@string/ingresarConstrasenaUser"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/edTxt_ingresarNombreUser"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icono ojo -->
    <ImageView
        android:id="@+id/imgVw_eye_closed"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/edTxt_ingresarConstrasenaUser"
        app:layout_constraintEnd_toEndOf="@id/edTxt_ingresarConstrasenaUser"
        app:layout_constraintTop_toTopOf="@id/edTxt_ingresarConstrasenaUser"
        app:srcCompat="@drawable/img_eye_closed"
        app:tint="@color/Cabeceras_y_Toolbar" />

    <!-- Crear cuenta -->
    <TextView
        android:id="@+id/txtVw_crearCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/crearCuenta"
        android:textAlignment="center"
        android:textColor="@color/crearCuenta"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/edTxt_ingresarConstrasenaUser"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- Botón ingresar -->
    <Button
        android:id="@+id/btn_ingresarThreadly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/fondoBoton"
        android:text="@string/ingresarThreadly"
        android:textColor="@color/textoCabecera_y_Botones"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/txtVw_crearCuenta"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
