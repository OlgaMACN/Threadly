<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/fondoPantallas"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/txtVw_textoHiloGrafico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/catchy_mager"
        android:gravity="center"
        android:text="@string/textoHiloGrafico"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/txtVw_textoMadejasGrafico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/catchy_mager"
        android:gravity="center"
        android:text="@string/textoMadejasGrafico"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtVw_columnaModificarPedidoMadeja"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/catchy_mager"
        android:gravity="center"
        android:cursorVisible="false"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:hint="-"
        android:textColor="@color/black"
        android:textSize="20sp" />
</LinearLayout>
