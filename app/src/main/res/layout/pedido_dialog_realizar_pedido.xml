<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/reutilizable_marco_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/txtVw_textoElegirTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/textoElegirTienda"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Fila de logos con nombres debajo -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Amazon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_amazon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:contentDescription="@string/textoAmazon"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/img_logo_amazon" />

        </LinearLayout>

        <!-- AliExpress -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_aliexpress"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:contentDescription="@string/textoAliExpress"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/img_logo_aliexpress" />

        </LinearLayout>

        <!-- Temu -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_temu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:contentDescription="@string/textoTemu"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/img_logo_temu" />

        </LinearLayout>
    </LinearLayout>

    <!-- Imagen decorativa -->

    <!-- BotÃ³n volver -->
    <Button
        android:id="@+id/btn_volver_pedido_dialog"
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/fondoBoton"
        android:fontFamily="@font/catchy_mager"
        android:text="@string/volver_pedido"
        android:textColor="@color/textoCabecera_y_Botones"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
